# Global SSH settings for all hosts
Host *
  ServerAliveInterval 60
  ServerAliveCountMax 3
  TCPKeepAlive yes

# GitHub
Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519_github_20250726
  IdentitiesOnly yes

# GitLab
Host gitlab.com
  HostName gitlab.com
  User git
  IdentityFile ~/.ssh/id_ed25519_gitlab_20250726
  IdentitiesOnly yes


# Hostinger VPS
Host hostinger-vps
  HostName srv928317.hstgr.cloud
  User root
  IdentityFile ~/.ssh/id_ed25519_hostinger_vps_20250811
  IdentitiesOnly yes
  SetEnv TERM=xterm-256color
  SendEnv COLORTERM LANG

# Hostinger VPS with K8s tunnel
Host hostinger-vps-k8s
  HostName srv928317.hstgr.cloud
  User root
  IdentityFile ~/.ssh/id_ed25519_hostinger_vps_20250811
  IdentitiesOnly yes
  SetEnv TERM=xterm-256color
  SendEnv COLORTERM LANG
  LocalForward 6443 127.0.0.1:6443

# Hostinger VPS - Read-Only Access
Host hostinger-vps-ro
  HostName srv928317.hstgr.cloud
  User milo-readonly
  IdentityFile ~/.ssh/id_ed25519_hostinger_vps_readonly_20251224
  IdentitiesOnly yes
  SetEnv TERM=xterm-256color
  SendEnv COLORTERM LANG

